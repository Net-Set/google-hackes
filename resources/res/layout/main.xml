<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/tv_googhacks_search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/s_googhacks_search" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <EditText android:id="@+id/tv_googhacks_search_string" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/sp_search_options" android:layout_alignParentLeft="true" android:inputType="text">
        <requestFocus/>
    </EditText>
    <Spinner android:id="@+id/sp_search_options" android:layout_width="match_parent" android:layout_height="wrap_content" android:prompt="@string/s_search_options"/>
    <Button android:id="@+id/btn_googhack_search" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Search!" android:onClick="onButtonClick"/>
</LinearLayout>
